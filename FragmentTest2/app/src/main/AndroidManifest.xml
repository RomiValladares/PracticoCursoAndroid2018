<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.fragmenttest2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".multipane.MainActivity"></activity>
        <activity android:name=".multipane.DetailsActivity" />
        <activity android:name=".backstack.FragmentCountingActivity" />
        <activity android:name=".viewpager.ViewpagerActivity" />
        <activity android:name=".tabs.TabsActivity" />
        <activity
            android:name=".bars.BarActivity"
            android:label="@string/title_activity_bar"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".navigationdrawer.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".webview.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>